<p>
	<%= link_to_new "New Section", new_section_path %>
</p>
<%if @sections.length > 0%>
	<table border=1>
		<tr>
			<th>S.No</th>
			<th>Sec Name</th>
			<th>Sec Des</th>
			<th>Sec Active</th>
			<th colspan='3'>Action</th>
		</tr>
		<% sno = paginate_sno
		for section in @sections %>
		<tr>
			<td align='right'><%= sno %></td>
			<td><%= section.sec_name %></td>
			<td><%= section.sec_des %></td>
			<td><%= section.sec_active %></td>
			<td><%= link_to_show "Show", section %></td>
			<td><%= link_to_edit "Edit", edit_section_path(section) %></td>
			<td><%= link_to_destroy "Destroy", section, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
		<% sno+=1
		end %>
	</table>
	<br />
	<p>
		<%= will_paginate @sections %>
	</p>
<%else%>
	<div class='flash_info'>
		Record not found
	</div>
<%end%>

